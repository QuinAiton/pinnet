<body>
  <!-- Sidebar  -->
  <div class="sidebar">

    <div class="sidebar-container">

      <a href="/" class="sidebar-header">
        <div class="logo-icon"></div>
        <h1>pinnet</h1>
      </a>

      <form id="searchbar" class="form-outline" method="GET" action="/pins">
        <input type="search" name="search" id="search" class="form-control" placeholder="Search for a pin!"
        aria-label="Search"/>
      </form>

      <% if (userId) { %>

      <div class="menu">
        <a href="/">
          <button>Explore</button>
        </a>
        <a href="/users/<%= userId %>">
          <button>My Pins</button>
        </a>
      </div>

      <div class="logins">
          <form class="form-inline" method="POST" action="/logout">
            <button>Log Out</button>
          </form>
      </div>

      <% } else { %>

      <div class="menu">
          <a href="/">
            <button>Explore</button>
          </a>
      </div>

      <div class="logins">
          <a href="/login">
            <button>Login</button>
          </a>
          <a href="/register">
            <button>Register</button>
          </a>
      </div>

      <% } %>

    </div>

  </div>

