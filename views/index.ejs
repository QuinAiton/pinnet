<%- include('partials/head') %>

<%- include('partials/sideBar') %>

    <!-- Content  -->
      <div class="content">

        <div class="navbar">
          <button type="button" id="sidebarCollapse">
            <span class="fas fa-bars"></span>
          </button>
        </div>
        <div class="content-body">
          <div class="explore">

            <% for(const pin of pins){ %>
            <article class="card-sm">
              <header>
                <div class="card-sm-image">
                  <img src="<%= pin.media %> ">
                </div>
                <div class="card-sm-info">
                  <div class="card-sm-link">
                    <h2><%= pin.title %> </h2>
                    <button class="link">
                      <span class="fas fa-external-link-alt"></span>
                    </button>
                  </div>
                  <p><%= pin.description %> </p>
                  <div class="card-sm-avg-rating">
                    <div class="fas fa-star checked"></div>
                    <div class="avg-rating"><%= pin.rating %> </div>
                  </div>
                </div>
              </header>

              <footer>
                <button>
                  <span class="far fa-plus-square"></span>
                </button>
                <div class="like">
                  <button class="far fa-heart"></button>
                  <p class="like-counter">25</p>
                </div>
              </footer>
            </article>
            <% } %>
            <!-- Pop-out-Model -->
            <div id="display" class="pop-out hide">
              <div class="pop-content">
                <div class="close">+</div>
                  <header>
                    <div class="card-md-image">
                      <img src="<%= pins[0].media %> ">
                    </div>
                    <div class="card-lg-info">
                      <div class="card-lg-link">
                        <h2><%= pins[0].title %> </h2>
                        <button class="link">
                          <span class="fas fa-external-link-alt"></span>
                        </button>
                      </div>
                      <p><%= pins[0].description %></p>
                      <div class="">
                        <div class="fas fa-star checked"></div>
                        <div class="avg-rating"><%= pins[0].rating %> </div>
                      </div>
                    </div>
                  </header>

                  <footer>
                    <button>
                      <span class="far fa-plus-square"></span>
                    </button>
                    <div class="like">
                      <button class="far fa-heart"></button>
                      <p class="like-counter">25</p>
                    </div>
                  </footer>
              </div>
            </div>
          </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
