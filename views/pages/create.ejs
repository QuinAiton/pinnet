<div class="create-form hide">
  <div class="create-content">
    <div class="fas fa-times form-close close"></div>
    <div class="form-head">
      <h2>Create A New Pin</h2>
    </div>

    <form id="create-form" action="/pins" method="POST">
      <div class="form-group">
        <label for="title">Title <span class="required">*</span></label>
        <input type="text"
                class="form-control"
                placeholder="pinnet"
                name="title"
                required
                maxlength="30";/>
      </div>

      <div class="form-group">
        <label for="url">URL <span class="required">*</span></label>
        <input type="text"
                class="form-control"
                placeholder="https://"
                name="url"
                required
                maxlength="255";/>
      </div>

      <div class="form-group">
        <label for="media">Media<span class="required">*</span></label>
        <input type="text"
                class="form-control"
                placeholder="https://"
                name="media"
                required
                maxlength="255";/>
      </div>

      <div class="form-group">
        <label for="description">Description <span class="required">*</span></label>
        <textarea name="description"
                  cols="30"
                  rows="10"
                  placeholder="Give your pin a description">
        </textarea>
      </div>
      
      <div class="login-register-submit">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
</div>
