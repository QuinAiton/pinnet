<div class="explore">
  <% for(const pin of pins){ %>

  <article class="display card-sm">
    <header>
      <div class="card-sm-image">
        <img src="<%= pin.media %>" />
      </div>
      <div class="card-sm-info">
        <div class="card-sm-link">
          <h2><%= pin.title %></h2>
          <a href="<%= pin.url %>" class="link">
            <span class="fas fa-external-link-alt"></span>
          </a>
        </div>
        <p><%= pin.description %></p>
        <div class="card-sm-avg-rating">
          <div class="fas fa-star checked">
            <% if(Number(pin.rating) !== null) { %> <%=
            Number(pin.rating).toFixed(1) %> <% } else { %>
            <p>No ratings yet</p>
            <% } %>
          </div>
        </div>
      </div>
    </header>
    <footer>
      <button>
        <span class="far fa-plus-square"></span>
      </button>

      <div class="like">
        <button class="far fa-heart"></button>
        <%= pin.like_count %>
      </div>
    </footer>

    <!-- Pop-Out Content -->
    <div class="pop-out hide">
      <div class="pop-content">
        <div class="close">+</div>
        <header>
          <div>
            <h2><%= pin.title %></h2>
            <img src="<%= pin.media %> " />
          </div>
          <div class="card-lg-info">
            <div class="card-lg-link"></div>
            <hr />
            <p><%= pin.description %></p>
          </div>
        </header>
        <footer>
          <div class="fas fa-star checked">
            <% if(Number(pin.rating) !== null){ %>
            <%=Number(pin.rating).toFixed(1) %> <% }else{ %> <%=
            Number(pin.rating)%> <% } %>
          </div>
          <div class="buttons">
            <button>
              <span class="far fa-plus-square"></span>
            </button>
            <div class="like">
              <button class="far fa-heart"></button>
              <p class="like-counter">25</p>
            </div>
            <button class="link">
              <span class="fas fa-external-link-alt"
                ><a href="<%= pin.url %> "></a
              ></span>
            </button>
          </div>
        </footer>
      </div>
    </div>
  </article>
  <% } %>
</div>
